%h1 Список пользователей

%table
  %thead
    %tr
      %th Почта
      %th Пароль
      %th Номер телефона
      %th Адрес
      %th Роль
      %th
      %th
      %th
      
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.password
        %td= user.phone_number
        %td= user.address
        %td= user.role
        %td= link_to 'Показать', user
        %td= link_to 'Редактировать', edit_user_path(user)
        %td= link_to 'Удалить', user, :method => :delete, :data => { :confirm => 'Вы уверены?' }

%br

= link_to 'Новый пользователь', new_user_path
